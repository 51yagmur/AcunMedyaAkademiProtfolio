@model AcunMedyaAkademiProtfolio.Models.Tbl_Testimonial
@{
    ViewBag.Title = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Referans Güncelleme</h2>

<form method="post">
    <label>Referans Id</label>
    <input type="text" class="table table-bordered"
           value="@Model.TestimonialId"
           name="FeatureId" readonly />

    <br />
    <label>Başlık</label>
    <input type="text" class="table table-bordered"
           value="@Model.TestimonialTitle"
           name="FeatureNameSurname" />
    <br />

    <label> Referans Açıklama</label>
    <input type="text" class="table table-bordered"
           value="@Model.TestimonialDescription"
           name="FeatureDescription" />
    <br />
    <label>Referans İsim-Soyisim</label>
    <input type="text" class="table table-bordered"
           value="@Model.TestimonialNameSurname"
           name="FeatureProjectName" />
    <br />

    <label> Referans Resim Yolu</label>
    <input type="text" class="table table-bordered"
           value="@Model.TestimonialİmageUrl"
           name="FeatureİmageUrl" />
    <br />

    <label>Referans İş</label>
    <input type="text" class="table table-bordered"
           value="@Model.Testimonialjob"
           name="FeatureProjectName" />
    <br />
    <label>Referans Durumu</label>
    <input type="text" class="table table-bordered"
           value="@Model.TestimonialStatus"
           name="FeatureProjectName" />

    <button class="btn btn-success">Referans Güncelleme</button>

</form>