@model List<AcunMedyaAkademiProtfolio.Models.Tbl_Testimonial>
@{
    ViewBag.Title = "TestimonialList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Referans Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>Referans Id</th>
        <th>Referans Başlığı </th>
        <th>Refrans Açıklaması</th>
        <th>Referans isim-soyisim</th>
        <th>Referans Resim Yolu</th>
        <th>Referans iş</th>
        <th>Referans durumu</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>

            <td>@item.TestimonialId</td>
            <td>@item.TestimonialTitle</td>
            <td>@item.TestimonialDescription</td>
            <td>@item.TestimonialNameSurname</td>
            <td><img src="@item.TestimonialİmageUrl" class="img-fluid" style="width:200px;height:150px" /> </td>
            <td>@item.Testimonialjob</td>
            <td>@item.TestimonialStatus</td>
            <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-success">Güncelle</a></td>
           

        </tr> }

    </table>


<a href="/Testimonial/CreateTestimonial" class="btn btn-primary">Yeni Referans Girişi</a>
