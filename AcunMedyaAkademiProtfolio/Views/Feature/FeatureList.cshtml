@model List<AcunMedyaAkademiProtfolio.Models.Tbl_Feature>
@{
    ViewBag.Title = "FeatureList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>FeatureList</h2>
<table class="table table-border">
    <tr>
        <th>Feature Id</th>
        <th>İsim - Soyisim</th>
        <th>Feature Açıklaması</th>
        <th>Feature Proje Adı</th>
        <th>Feature Resim Yolu</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FeatureId</td>
            <td>@item.FeatureNameSurname</td>
            <td>@item.FeatureDescription</td>>
            <td>@item.FeatureProjectName</td>>
            <td><img src="@item.FeatureİmageUrl" class="img-fluid" style="width:200px;height:150px"/></td>
            <td><a href="/Feature/DeleteFeature/@item.FeatureId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Feature/UpdateFeature/@item.FeatureId" class="btn btn-success">Güncelle</a></td>
        </tr>
    }


</table>
<a href="/Feature/CreateFeature" class="btn btn-primary">Yeni Feature Girişi</a>


