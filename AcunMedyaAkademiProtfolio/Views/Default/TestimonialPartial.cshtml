@model List<AcunMedyaAkademiProtfolio.Models.Tbl_Testimonial>

<div id="testimonials" class="section wb">
    <div class="container">
        <div class="section-title text-left">
            <h3>Referanslarım</h3>
            <p>Benim hakkımda düşünülenler </p>
        </div><!-- end title -->
      
            <div class="row">
                <div class="col-md-12 col-sm-12">
                    <div class="testi-carousel owl-carousel owl-theme">
                        @foreach (var item in Model)
                        {

                            <div class="testimonial clearfix">

                                <div class="desc">
                                    <h3><i class="fa fa-quote-left"></i>@item.TestimonialTitle</h3>
                                    <p class="lead"> @item.TestimonialDescription</p>
                                </div>
                                <div class="testi-meta">
                                    <img src="@item.TestimonialİmageUrl" alt="" class="img-fluid alignleft">
                                    <h4>@item.TestimonialNameSurname<small>@item.Testimonialjob</small></h4>
                                </div>
                                <!-- end testi-meta -->
                            </div>}






                    </div>
                </div><!-- end col -->
            </div><!-- end row -->
        </div><!-- end container -->
</div>
