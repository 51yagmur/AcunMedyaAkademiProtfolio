@model AcunMedyaAkademiProtfolio.Models.Tbl_About
@{
    ViewBag.Title = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>İçerik Güncelleme</h2>
<form method="post">
    <label>İçerik Id</label>
    @Html.TextBoxFor(x => x.AboutId, new { @class = "table table-bordered " })
    <br />
    <label>İçerik Başlığı</label>
    @Html.TextBoxFor(x => x.AboutTitle, new { @class = "table table-bordered " })
    <br />
    <label>İçerik Açıklaması</label>
    @Html.TextBoxFor(x => x.AboutDescription, new { @class = "table table-bordered " })
    <br />
    <label>İçerik Resim Yolu</label>
    @Html.TextBoxFor(x => x.AboutİmgUrl, new { @class = "table table-bordered " })

    <br />
    <button class="btn btn-success">İçerik Güncelle</button>

</form>
