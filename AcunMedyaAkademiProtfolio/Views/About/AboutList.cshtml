@model List<AcunMedyaAkademiProtfolio.Models.Tbl_About>

@{
    ViewBag.Title = "AboutList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hakkımda Listesi</h2>
<table class="table table-border">
    <tr>
        <th>Hakkımda Id</th>
        <th>Hakkımda Başlık</th>
        <th>Hakkımda Açıklaması</th>
        <th>Hakkımda Resim yolu</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AboutId</td>
            <td>@item.AboutTitle</td>
            <td>@item.AboutDescription</td>
            <td><img src="@item.AboutİmgUrl" class="img-fluid" style="width:100px; height:150px" /></td>
            <td><a href="/About/DeleteAbout/@item.AboutId" class="btn btn-danger">Sil</a></td>
            <td><a href="/About/UpdateAbout/@item.AboutId" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/About/CreateAbout" class="btn btn-primary">Yeni İçerik Ekleme</a>

