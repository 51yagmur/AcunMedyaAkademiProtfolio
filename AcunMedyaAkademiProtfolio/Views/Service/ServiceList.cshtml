@model List<AcunMedyaAkademiProtfolio.Models.Tbl_Service>
@{
    ViewBag.Title = "ServiceList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Hizmet Id</th>
        <th>Hizmet Adı</th>
        <th>Hizmet Açıklaması</th>
        <th>Hizmet Resim Yolu </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ServiceId</td>
            <td>@item.ServiceTitle</td>
            <td>@item.ServiceDescription </td>
            <td><img src="@item.ServiceİmageUrl" class="img-fluid" style="width:200px;height:150px" /></td>
            <td><a href="/Service/DeleteService/@item.ServiceId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Service/UpdateService/@item.ServiceId" class="btn btn-success">Güncelle</a></td>
        </tr>
    }


</table>

<a href="/Service/CreateService" class="btn btn-primary">Yeni Hizmet Girişi</a>