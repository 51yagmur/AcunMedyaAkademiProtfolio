@model AcunMedyaAkademiProtfolio.Models.Tbl_Service
@{
    ViewBag.Title = "UpdateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hizmet Güncelleme</h2>

<form method="post">
    <label>Hizmet Id</label>
    <input type="text" class="table table-bordered"
           value="@Model.ServiceId"
           name="ServiceId" readonly />

    <br />
    <label>Hizmet Adı</label>
    <input type="text" class="table table-bordered"
           value="@Model.ServiceTitle"
           name="ServiceTitle" />
    <br />

    <label>  Hizmet Açıklama</label>
    <input type="text" class="table table-bordered"
           value="@Model.ServiceDescription"
           name="ServiceDescription" />
    <br />
    <label>Hizmet Resim Yolu</label>
    <input type="text" class="table table-bordered"
           value="@Model.ServiceİmageUrl"
           name="ServiceİmageUrl" />
    <br />

    <button class="btn btn-success">Hizmet Güncelle</button>

</form>

